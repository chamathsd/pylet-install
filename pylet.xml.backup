    <postInstallationActionList>
        <deleteFile path="${installdir}/tmp/"/>
        <deleteFile path="${installdir}/rollbackBackupDirectory/"/>
        <setInstallerVariableFromScriptOutput>
            <abortOnError>0</abortOnError>
            <exec>schtasks</exec>
            <execArgs>/query /fo list</execArgs>
            <name>output</name>
            <showMessageOnError>0</showMessageOnError>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariable name="taskName" value="Pylet Update"/>
        <setInstallerVariable name="taskExists" value="0"/>
        <setInstallerVariable>
            <name>taskExists</name>
            <value>1</value>
            <ruleList>
                <regExMatch>
                    <logic>matches</logic>
                    <pattern>TaskName:\s*(${taskName})\n</pattern>
                    <text>${output}</text>
                </regExMatch>
            </ruleList>
        </setInstallerVariable>
        <addScheduledTask>
            <dayOfMonth>1</dayOfMonth>
            <disallowStartIfOnBatteries>0</disallowStartIfOnBatteries>
            <duration></duration>
            <endDate></endDate>
            <interval></interval>
            <name>Pylet Update</name>
            <password></password>
            <period>1</period>
            <program>${installdir}/autoupdate-windows.exe</program>
            <programArguments>--mode unattended --unattendedmodebehavior download</programArguments>
            <runAsAdmin>1</runAsAdmin>
            <runOnlyIfLoggedOn>1</runOnlyIfLoggedOn>
            <startDate></startDate>
            <startTime></startTime>
            <type>ONLOGON</type>
            <weekDays>*</weekDays>
            <ruleList>
                <isFalse value="${taskExists}"/>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </addScheduledTask>
    </postInstallationActionList>
    <preUninstallationActionList>
        <deleteFile path="${windows_folder_common_desktopdirectory}/Pylet.lnk"/>
        <deleteFile path="${windows_folder_desktopdirectory}/Pylet.lnk"/>
        <deleteFile path="${windows_folder_common_startmenu}/Programs/Pylet.lnk"/>
        <deleteFile path="${windows_folder_startmenu}/Programs/Pylet.lnk"/>
        <deleteFile path="${windows_folder_common_startmenu}/Pylet.lnk"/>
        <deleteFile path="${windows_folder_startmenu}/Pylet.lnk"/>
        <deleteFile path="${installdir}/config.ini"/>
        <deleteFile path="${installdir}/update.ini"/>
        <deleteFile path="${installdir}/tmp/"/>
        <deleteFile path="${installdir}/rollbackBackupDirectory/"/>
        <deleteScheduledTask>
            <name>Pylet Update</name>
        </deleteScheduledTask>
    </preUninstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <splashScreenDelay>3000</splashScreenDelay>
